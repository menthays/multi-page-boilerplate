{
  "name": "multi-page-boilerplate",
  "version": "1.0.0",
  "author": {
    "name": "HaoYang <tillohao@gmail.com>"
  },
  "description": "multi-page web app template with webpack4 and other cool tools",
  "repository": {
    "type": "git",
    "url": "https://github.com/menthays/multi-page-boilerplate.git"
  },
  "license": "MIT",
  "scripts": {
    "test": "jest ./test",
    "lint": "eslint src/**/*.{js,jsx} --fix",
    "dev": "cross-env NODE_ENV=development webpack-dev-server",
    "start": "npm run dev",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{css,scss,json,md,js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "@babel/core": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "autoprefixer": "9.5.0",
    "babel-loader": "8.0.5",
    "clean-webpack-plugin": "2.0.1",
    "copy-webpack-plugin": "5.0.2",
    "cross-env": "5.2.0",
    "css-loader": "2.1.1",
    "cssnano": "4.1.10",
    "eslint": "5.15.3",
    "eslint-config-prettier": "4.1.0",
    "eslint-config-xo": "0.26.0",
    "eslint-plugin-prettier": "3.0.1",
    "file-loader": "3.0.1",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.3.1",
    "jest": "24.7.1",
    "lint-staged": "8.1.5",
    "mini-css-extract-plugin": "0.5.0",
    "node-sass": "4.11.0",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "postcss-import": "12.0.1",
    "postcss-loader": "3.0.0",
    "prettier": "1.16.4",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1",
    "uglifyjs-webpack-plugin": "2.1.2",
    "url-loader": "1.1.2",
    "webpack": "4.30.0",
    "webpack-cli": "3.3.0",
    "webpack-dev-server": "3.2.1",
    "webpack-serve": "3.1.0"
  }
}
